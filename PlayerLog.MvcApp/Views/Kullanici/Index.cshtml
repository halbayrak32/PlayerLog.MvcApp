@model IEnumerable<PlayerLog.MvcApp.Models.Kullanici>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kullanıcılar</h2>

<p>
    @Html.ActionLink("Yeni Olustur", "Olustur")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sifre)
        </th>        
        <th>
			@Html.DisplayNameFor(model => model.KullaniciAdi)
		</th>
    </tr>

@foreach (var item in Model) {
<tr>
	<td>
		@Html.DisplayFor(modelItem => item.Ad)
	</td>
	<td>
		@Html.DisplayFor(modelItem => item.Sifre)
	</td>
	<td>
		@Html.DisplayFor(modelItem => item.KullaniciAdi)
	</td>

	<td>
		@Html.ActionLink("Guncelle", "Guncelle", new { id = item.KullaniciId }) |
		@Html.ActionLink("Detaylar", "Detaylar", new { id = item.KullaniciId }) |
		@Html.ActionLink("Sil", "Sil", new { id = item.KullaniciId })
	</td>
</tr>
}

</table>
